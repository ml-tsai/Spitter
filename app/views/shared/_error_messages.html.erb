<% if object.errors.any? %>
  <div id="error_messages">
    <h5><%= pluralize(object.errors.count, 'error')%> prohibited this 
        <%= object.class.to_s.underscore.humanize.downcase %>
        from being saved:</h5>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>