<header class="grid_12">
  <div id="logo" class="grid_10 alpha">
    <h1><%= link_to "SPITTER", root_path %></h1>
  </div>
  <div id="login" class="grid_2 omega">
    <small>Welcome <%= signed_in? ? current_user.name.capitalize : "Guest"%> </small>
    <br/>
    <% if signed_in? %>
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login", login_path %> | <%= link_to "Sign Up", signup_path %>
    <% end %>
  </div>
</header>