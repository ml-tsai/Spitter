<h3><%= @pagetitle %></h3>
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label "Image" %><br/>
    <%= gravatar_for @user%><br/>
    <a href="http://gravatar.com/emails">Edit Image</a>
  </div>
  <br class="clearfix"/>
  <div class="actions">
    <%=  f.submit "Update" %>
  </div>
<% end %>

